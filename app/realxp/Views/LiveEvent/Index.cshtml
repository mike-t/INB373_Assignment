@model IEnumerable<realxp.liveevent>

@{
    ViewBag.Title = "Events";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add an event", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.liveevent_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.liveevent_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.venue.venue_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.liveevent_daterange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.liveevent_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.liveevent_description)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content("~/Content/Images/Events/")@Html.DisplayFor(modelItem => item.liveevent_image)" alt="@Html.DisplayFor(modelItem => item.liveevent_name)" class="img-thumbnail" >
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.liveevent_name)
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.venue.venue_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.liveevent_daterange)
        </td>
        <td>
            <p><strong>@Html.DisplayFor(modelItem => item.liveevent_price)</strong></p>
            <p><a class="btn btn-danger" href="@Url.Action("Index", "UserPurchase", new { id = item.liveeventID })">Buy now</a></p>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.liveevent_description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.liveeventID }) |
            @Html.ActionLink("Details", "Details", new { id=item.liveeventID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.liveeventID })
        </td>
    </tr>
}

</table>
